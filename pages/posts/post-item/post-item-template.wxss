
.post-container {
  display: flex;
  flex-direction: column;
  margin-top:20rpx;
  margin-bottom: 40rpx;
  background-color: #f7f7f7;
  border-bottom: 1px solid #f7f7f7;
  border-top: 1px solid #f7f7f7;
  padding-bottom: 5px;
}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
}

.post-author, .post-date {
  vertical-align: middle; 
}

.post-author {
  width:60rpx;
  height:60rpx;
}

.post-date {
  margin-left: 20rpx;
  /* margin-bottom: 5px; */
  font-size:26rpx;
}

.post-title {
  font-weight: 600;
  font-size: 34rpx;
  color: #333;
  margin-bottom: 10px;
  margin-left:10px; 
}

.post-image {
  width:100%;
  height:400rpx;
  margin:auto 0;
  margin-bottom: 15px;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  line-height:40rpx;
  letter-spacing: 2rpx;
}

.post-like {
  font-size: 13px;
  flex-direction: row;
  line-height:16px;
  margin-left: 10px;
}

.post-like-image1 {
  display:inline-block;
  width:16px;
  height:16px;
  /* background-position: -60rpx 0; */
  vertical-align: middle;
  margin-right: 8px;
}

.post-like-image2 {
  height:16px;
  width:16px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-font {
  vertical-align: middle;
  margin-right: 20px;
}