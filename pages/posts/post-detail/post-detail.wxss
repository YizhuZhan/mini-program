/* pages/posts/post-detail/post-detail.wxss */
.container {
  display: flex;
  flex-direction: column;
}

.contentImg {
  width:100%;
  height:460rpx;
}

.audio {
  width:102rpx;
  height:110rpx;
  position: absolute;
  top:180rpx;
  left:50%;
  margin-left:-51rpx;
  /* 水平居中经典方式：left:50%;margin-left:-..rpx; */
  opacity: 0.6;
}

.avatar-author-info {
  flex-direction: row;
  margin-left:30rpx;
  margin-top:20rpx;
}

.avatar {
  width:64rpx;
  height:64rpx;
  vertical-align: middle;
}

.author, .info {
  margin-left:20rpx;
  vertical-align: middle;
}

.author {
  font-size:30rpx;
  font-weight: 300;
}

.info {
  color: #999;

}

.title {
  margin:30rpx 0 0 40rpx;
  font-size:36rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  color: #4b556c;
}

.icon {
  flex-direction: row;
  margin-right:40rpx;
}

.collection, .share {
  float: right;
  margin-left:30rpx;
  vertical-align: middle;
  width:80rpx;
  height:80rpx;
}

.line {
  position: relative;
  top:40rpx;
  border: 1px solid #f1f1f1;
  vertical-align: middle;
  z-index:-99;
}
.content {
  margin:20rpx 30rpx 50rpx 30rpx;
  line-height:44rpx;
  letter-spacing: 2rpx;
  color: #666;
}