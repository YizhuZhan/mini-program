/* pages/welcome/welcome.wxss */
page {
  height: 100%;
  background: #b3d4db;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  height: 200rpx;
  width: 200rpx;
  margin-top: 160rpx;
}

.user-name {
  margin-top: 100rpx;
  font-size: 32rpx;
}

.moto-container {
  margin-top: 200rpx;
  height: 80rpx;
  width: 200rpx;
  border-radius: 5px;
  border: 1px solid #405f80;
  text-align: center;
}

.moto {
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
}